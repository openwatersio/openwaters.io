---
import { cn } from "../../utils/cn";

type Props = astroHTML.JSX.HTMLAttributes | astroHTML.JSX.AnchorHTMLAttributes;

const { class: className, ...attrs } = Astro.props;
const Tag = "href" in attrs ? "a" : "div";
---

<Tag
  {...attrs}
  class={cn("href" in attrs ? "card-hover block" : "card", className)}
>
  <slot />
</Tag>
