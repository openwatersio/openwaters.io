---
import MainLayout from "../../../layouts/MainLayout.astro";
import { StationsMap } from "../../../components/tides/StationsMap";
import Feature from "../../../components/ui/Feature.astro";
---

<MainLayout
  title="Tide Stations"
  description="Browse and search thousands of tide stations worldwide on an interactive map."
  fullscreen
>
  <StationsMap client:load>
    <div class="card-glass overflow-hidden rounded-3xl p-0">
      <h6 class="px-4 pb-1 pt-3 text-base text-slate-500">Developer Tools</h6>
      <ul class="divide-y divide-navy-200">
        <li>
          <a class="block px-4 py-3 hover:bg-ocean-200/50" href="/api">
            <Feature
              title="API"
              description="Station data and predictions via a REST API."
              icon="mdi:code-greater-than"
            />
          </a>
        </li>

        <li>
          <a class="block px-4 py-3 hover:bg-ocean-200/50" href="/tides/neaps">
            <Feature
              title="Neaps"
              description="An open source tide prediction engine."
              icon="mdi:code"
            />
          </a>
        </li>

        <li>
          <a
            class="block px-4 py-3 hover:bg-ocean-200/50"
            href="/tides/database"
          >
            <Feature
              title="Tide Database"
              description="Harmonic constituents for thousands of stations globally."
              icon="mdi:database-outline"
            />
          </a>
        </li>
      </ul>
    </div>
  </StationsMap>
</MainLayout>
