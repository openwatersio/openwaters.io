---
import MainLayout from "../../../layouts/MainLayout.astro";
import Container from "../../../components/ui/Container.astro";
import Card from "../../../components/ui/Card.astro";
import { StationsMap } from "../../../components/tides/StationsMap";
---

<MainLayout
  title="Tide Stations"
  description="Browse and search thousands of tide stations worldwide on an interactive map."
>
  <StationsMap client:load />
  <Container class="py-16">
    <div class="mx-auto max-w-6xl">
      <!-- Interactive Map -->
      <Card class="mb-8 p-0" />

      <!-- Alternative Access Methods -->
      <div class="space-y-6">
        <h2 class="text-2xl font-semibold">Access Station Data</h2>

        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
          <Card hover>
            <h3 class="mb-3 text-lg font-semibold">Via API</h3>
            <p class="mb-4 text-sm text-navy-600">
              Query stations programmatically through our RESTful API. Perfect
              for integrating into your applications.
            </p>
            <a
              href="/api"
              class="inline-flex items-center gap-1 text-sm font-medium text-ocean-600 hover:text-ocean-700"
            >
              View API Documentation
              <svg
                class="h-4 w-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </Card>

          <Card hover>
            <h3 class="mb-3 text-lg font-semibold">Via GitHub</h3>
            <p class="mb-4 text-sm text-navy-600">
              Browse the complete database, download station data, or contribute
              improvements on GitHub.
            </p>
            <a
              href="https://github.com/neaps/tide-database"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1 text-sm font-medium text-ocean-600 hover:text-ocean-700"
            >
              View on GitHub
              <svg
                class="h-4 w-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                ></path>
              </svg>
            </a>
          </Card>
        </div>
      </div>
    </div>
  </Container>
</MainLayout>
