---
import MainLayout from "../../layouts/MainLayout.astro";
import Container from "../../components/ui/Container.astro";
import Card from "../../components/ui/Card.astro";
import { stations } from "@neaps/tide-database";
import { Icon } from "astro-icon/components";
---

<MainLayout
  title="Tide Database"
  description="Comprehensive database of tidal harmonic constituents and station metadata for thousands of locations worldwide."
>
  <Container class="py-16">
    <div class="mx-auto max-w-4xl">
      <div class="flex items-center justify-between">
        <h1 class="mb-2">Tide Database</h1>
        <a
          href="https://github.com/neaps/tide-database"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-outline inline-flex items-center gap-2"
        >
          <Icon name="mdi:github" class="size-6" />
          View on GitHub
        </a>
      </div>

      <p class="text-lead mb-4">A public database of tide harmonics</p>
      <div class="prose prose-xl mb-12 max-w-none text-pretty">
        <p>
          This database includes harmonic constituents for tide prediction from
          various sources around the world. These constants can be used with a
          tide harmonic calculator like <a href="/tides/neaps">Neaps</a> to perform
          tide predictions.
        </p>
      </div>

      <!-- What's Included -->
      <div class="mb-16">
        <!-- Quick Stats -->
        <div class="mb-16 grid grid-cols-2 gap-4 md:grid-cols-4">
          <Card class="text-center">
            <div class="mb-1 text-3xl font-bold text-ocean-600">
              {stations.length}
            </div>
            <div class="text-sm text-navy-600">Stations</div>
          </Card>
          <Card class="text-center">
            <div class="mb-1 text-3xl font-bold text-ocean-600">
              {new Set(stations.map((s) => s.country)).size}
            </div>
            <div class="text-sm text-navy-600">Countries</div>
          </Card>
          <Card class="text-center">
            <div class="mb-1 text-3xl font-bold text-ocean-600">
              {
                new Set(
                  stations.flatMap((s) =>
                    (s.harmonic_constituents ?? []).map((c) => c.name),
                  ),
                ).size
              }
            </div>
            <div class="text-sm text-navy-600">Constituents</div>
          </Card>
          <Card class="text-center">
            <div class="mb-1 text-3xl font-bold text-ocean-600">100%</div>
            <div class="text-sm text-navy-600">Open Data</div>
          </Card>
        </div>
      </div>

      <!-- Data Sources -->
      <div class="mb-16">
        <h2 class="mb-6 text-3xl font-semibold">Data Sources</h2>
        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <div class="mt-1 rounded-full bg-ocean-600 p-2 text-white">
              <svg
                class="size-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="mb-1 text-2xl font-semibold">
                <a
                  href="https://tidesandcurrents.noaa.gov/web_services_info.html"
                >
                  NOAA
                </a>
              </h3>
              <p>
                Primary source for US coastal stations. Harmonic constituents
                derived from years of continuous water level observations at
                NOAA tide gauge stations.
              </p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div class="mt-1 rounded-full bg-ocean-600 p-2 text-white">
              <svg
                class="size-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="mb-1 text-2xl font-semibold">
                <a href="https://www.seanoe.org/data/00980/109129/">
                  TICON-4
                </a>
              </h3>
              <p>
                TIdal CONstants based on GESLA-4 sea-level records contains 50
                estimated tidal constituents from 4200+ tide gauges distributed
                globally.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Access the Database -->
      <div class="mb-16">
        <h2 class="mb-6 text-3xl font-semibold">Access the Database</h2>

        <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
          <Card
            href="https://github.com/neaps/tide-database"
            target="_blank"
            rel="noopener noreferrer"
          >
            <div class="flex items-start gap-3">
              <div class="text-ocean-600">
                <svg class="h-8 w-8" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="mb-2 text-lg font-semibold">GitHub Repository</h3>
                <p class="mb-3 text-sm text-navy-600">
                  Browse the full database, make improvements, or add new
                  sources through our GitHub repository.
                </p>
                <span
                  class="inline-flex items-center gap-1 text-sm font-medium text-ocean-600 hover:text-ocean-700"
                >
                  View on GitHub
                  <svg
                    class="h-4 w-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    ></path>
                  </svg>
                </span>
              </div>
            </div>
          </Card>

          <Card
            href="https://github.com/neaps/tide-database/releases"
            target="_blank"
            rel="noopener noreferrer"
          >
            <div class="flex items-start gap-3">
              <div class="text-ocean-600">
                <svg
                  class="h-8 w-8"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="mb-2 text-lg font-semibold">Direct Download</h3>
                <p class="mb-3 text-sm text-navy-600">
                  Download the complete database as JSON or CSV files for
                  offline use or integration into your own applications.
                </p>
                <span
                  class="inline-flex items-center gap-1 text-sm font-medium text-ocean-600 hover:text-ocean-700"
                >
                  Download Data
                  <svg
                    class="h-4 w-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    ></path>
                  </svg>
                </span>
              </div>
            </div>
          </Card>

          <Card href="/tides/stations">
            <div class="flex items-start gap-3">
              <div class="text-ocean-600">
                <svg
                  class="h-8 w-8"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="mb-2 text-lg font-semibold">Interactive Map</h3>
                <p class="mb-3 text-sm text-navy-600">
                  Explore stations visually on our interactive map, filter by
                  type and source, and view detailed information.
                </p>
                <span
                  class="inline-flex items-center gap-1 text-sm font-medium text-ocean-600 hover:text-ocean-700"
                >
                  Browse Stations
                  <svg
                    class="h-4 w-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"></path>
                  </svg>
                </span>
              </div>
            </div>
          </Card>

          <Card href="/api">
            <div class="flex items-start gap-3">
              <div class="text-ocean-600">
                <svg
                  class="h-8 w-8"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <h3 class="mb-2 text-lg font-semibold">API Access</h3>
                <p class="mb-3 text-sm text-navy-600">
                  Query stations and retrieve harmonic data programmatically
                  through our RESTful API.
                </p>
                <span
                  class="inline-flex items-center gap-1 text-sm font-medium text-ocean-600 hover:text-ocean-700"
                >
                  View API Docs
                  <svg
                    class="h-4 w-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"></path>
                  </svg>
                </span>
              </div>
            </div>
          </Card>
        </div>
      </div>

      <!-- Contributing -->
      <Card
        class="border-0 bg-gradient-to-r from-ocean-600 to-ocean-700 text-white"
      >
        <div class="text-center">
          <h2 class="mb-4 text-3xl font-semibold text-white">
            Contribute to the Database
          </h2>
          <p class="mb-6 text-xl text-ocean-50">
            Help improve the tide database by contributing station data,
            corrections, or enhancements. All contributions are welcome!
          </p>
          <a
            href="https://github.com/neaps/tide-database"
            target="_blank"
            rel="noopener noreferrer"
            class="btn bg-white text-ocean-700 hover:bg-ocean-50"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
            Contribute on GitHub
          </a>
        </div>
      </Card>
    </div>
  </Container>
</MainLayout>
