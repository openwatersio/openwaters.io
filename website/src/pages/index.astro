---
import MainLayout from "../layouts/MainLayout.astro";
import Container from "../components/ui/Container.astro";
import Card from "../components/ui/Card.astro";
import { Icon } from "astro-icon/components";
---

<MainLayout>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-ocean-50 to-white py-20">
    <Container>
      <div class="mx-auto max-w-2xl text-center">
        <h1 class="mb-6 font-bold">Open Source Marine Software and Data</h1>
        <p class="text-lead">
          Understand and navigate the sea with tools built through open source
          collaboration.
        </p>
      </div>
    </Container>
  </section>

  <!-- Features Section -->
  <section class="py-16">
    <Container>
      <div class="mx-auto grid max-w-4xl grid-cols-1 gap-8 md:grid-cols-2">
        <!-- Tides -->
        <Card href="/tides" class="space-y-3">
          <div class="text-ocean-600">
            <svg
              class="h-12 w-12"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
              ></path>
            </svg>
          </div>
          <h3>Tides</h3>
          <p class="text-navy-600">
            Tide predictions powered by the Neaps engine, with data from
            thousands of stations worldwide.
          </p>
          <span
            class="inline-flex items-center gap-1 font-medium text-ocean-600 hover:text-ocean-700"
          >
            Explore tides
            <svg
              class="h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </span>
        </Card>

        <!-- Bathymetry -->
        <Card href="/bathymetry" class="space-y-3">
          <div class="text-ocean-600">
            <svg
              class="h-12 w-12"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"
              ></path>
            </svg>
          </div>
          <h3>Bathymetry</h3>
          <p class="text-navy-600">
            Collect and share depth data from your vessel to contribute to
            crowd-sourced bathymetry programs.
          </p>
          <span
            class="inline-flex items-center gap-1 font-medium text-ocean-600 hover:text-ocean-700"
          >
            Learn more
            <svg
              class="h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </span>
        </Card>
      </div>
    </Container>
  </section>

  <!-- CTA Section -->
  <section class="py-16">
    <Container>
      <div
        class="mx-auto max-w-4xl space-y-6 rounded-2xl bg-gradient-to-b from-ocean-600 to-ocean-700 p-10 text-center text-white"
      >
        <h3 class="text-white">Get Involved</h3>
        <p class="mx-auto max-w-2xl text-balance text-xl text-ocean-50">
          Join our community of mariners, developers, and ocean enthusiasts
          building better tools for the sea.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="https://github.com/openwatersio"
            target="_blank"
            rel="noopener noreferrer"
            class="btn bg-white text-ocean-700 hover:bg-ocean-50"
          >
            <Icon name="mdi:github" class="size-6" />
            View on GitHub
          </a>
          <a
            href="mailto:info@openwaters.io"
            class="btn bg-ocean-800 text-white hover:bg-ocean-900"
          >
            Get in Touch
          </a>
        </div>
      </div>
    </Container>
  </section>
</MainLayout>
