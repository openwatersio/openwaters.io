---
import Header from "../components/layout/Header.astro";
import Footer from "../components/layout/Footer.astro";
import "../styles/global.css";
import { cn } from "../utils/cn";

interface Props {
  title?: string;
  description?: string;
  fullscreen?: boolean;
}

const {
  title = "Open Waters - Open Source Marine Software and Data",
  description = "Open source tools and data for understanding and navigating the sea. Tide predictions, bathymetry, and more.",
  fullscreen = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const fullTitle =
  title === "Open Waters - Open Source Marine Software and Data"
    ? title
    : `${title} | Open Waters`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Open Waters" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />

    <script
      is:inline
      defer
      data-domain="openwaters.io"
      src="https://plausible.io/js/script.js"></script>
  </head>
  <body
    class={cn({ "flex min-h-screen flex-col": true, fullscreen: fullscreen })}
  >
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
